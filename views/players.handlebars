<section class="flex flex-col justify-center items-center my-8 w-11/12" id="playersOptions">
	<h2 class="self-center font-bold text-2xl">Players</h2>
	<button type="submit" class="border-2 bg-gray-400 rounded-xl w-1/2 pt-1 pb-1 pl-2 pr-2 self-center mt-4" id="addNewPlayer">Add New Player</button>
	{{#if playersData}}
		<div class="flex flex-col md:flex-row flex-wrap justify-start items-start w-full py-4">
			{{#each playersData as |player| }}
				<div class="flex flex-row flex-wrap w-4/5 md:w-1/2 lg:w-1/5 flex-none gap-2">
					<p class="font-bold">{{player.name}}</p>
					<a href="/player-edit/{{player.id}}" class="underline" id="edit">Edit</a>
					<a href="/delete" class="underline" id="delete">Delete</a>
				</div> 
			{{/each}}
		</div>
	{{/if}}
</section>